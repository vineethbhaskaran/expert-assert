{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es2019",
    "lib": ["dom","ES2019"],
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "baseUrl": ".",

    "paths": {
      "*": ["node_modules/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "tests/**/*.ts", "dist/**/*"]
}
